{
  "name": "muffled",
  "version": "0.1.1",
  "main": "dist/index.js",
  "type": "module",
  "repository": "https://github.com/Pajdzik/muffled.git",
  "author": "Kamil Pajdzik <pajdziupaj@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@digitak/esrun": "^3.2.24",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/node": "^20.2.5",
    "@types/webextension-polyfill": "^0.10.0",
    "esbuild": "^0.17.18",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "web-ext": "^7.6.2"
  },
  "scripts": {
    "bundle-background": "esbuild ./src/background.ts --bundle --minify --sourcemap --target=firefox100 --outfile=./dist/src/background.js --format=esm",
    "bundle-index": "esbuild ./src/index.ts --bundle --minify --sourcemap --target=firefox100 --outfile=./dist/src/index.js --format=esm",
    "bundle-popup": "esbuild ./src/popup.ts --bundle --sourcemap --target=firefox100 --outfile=./dist/src/popup.js --format=iife",
    "bundle": "mkdir -p dist/src && yarn copy-static && yarn bundle-background && yarn bundle-index && yarn bundle-popup",
    "copy-static": "yarn copy-assets && yarn copy-popup-ui && yarn copy-manifest",
    "copy-assets": "cp -r ./src/assets dist",
    "copy-assets-watch": "nodemon --watch ./src/assets --ext css,html,png,json,svg --exec 'yarn copy-assets'",
    "copy-popup-ui": "cp ./src/popup.{css,html} dist/src/",
    "copy-popup-ui-watch": "nodemon --watch ./src/popup.{css,html} --exec 'yarn copy-popup-ui'",
    "copy-manifest": "cp manifest.json dist/manifest.json",
    "copy-manifest-watch": "nodemon --watch manifest.json --exec 'yarn copy-manifest'",
    "lint": "yarn web-ext lint --source-dir ./dist",
    "build": "yarn bundle && yarn build-xpi",
    "build-xpi": "yarn web-ext build -s ./dist --overwrite-dest"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
