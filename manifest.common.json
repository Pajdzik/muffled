{
  "manifest_version": 3,
  "name": "Aulibby",
  "version": "0.8.0",
  "description": "Browser extension for Audible.com",
  "content_scripts": [
    {
      "matches": ["*://audible.com/*", "*://*.audible.com/*"],
      "js": ["./src/index.js"]
    }
  ],
  "permissions": ["webRequest", "storage"],
  "host_permissions": ["*://*.audible.com/*"],
  "action": {
    "default_icon": {
      "32": "./assets/icon.png",
      "64": "./assets/icon.png",
      "128": "./assets/icon.png"
    },
    "default_title": "Aulibby",
    "default_popup": "./src/popup.html"
  }
}
