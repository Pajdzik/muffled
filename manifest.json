{
  "manifest_version": 2,
  "name": "Muffled",
  "version": "0.1",
  "description": "TBD",
  "content_scripts": [
    {
      "matches": ["*://audible.com/*", "*://*.audible.com/*"],
      "js": ["index.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "type": "module"
  },
  "permissions": ["webRequest", "*://*.spl.org/*"],
  "browser_action": {
    "default_icon": {
      "32": "icon.png",
      "64": "icon.png"
    },
    "default_title": "Aulible",
    "default_popup": "popup.html"
  }
}
